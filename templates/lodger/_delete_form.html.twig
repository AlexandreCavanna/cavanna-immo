<form method="post" action="{{ path('lodger_delete', {'id': lodger.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce locataire ?');" style="display:inline;">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lodger.id) }}">
    <button class="btn btn-danger text-center">Supprimer le locataire</button>
</form>
