{% extends 'base.html.twig' %}

{% block title %}Liste immeubles
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<h1>Liste des Immeubles</h1>

			<table class="table table-hover text-center">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Adresse</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for building in buildings %}
						<tr>
							<th scope="row">{{ building.id }}</th>
							<td>{{ building.address }}</td>
							<td>
								<a href="{{ path('building_show', {'id': building.id}) }}" class="btn btn-primary text-center">Voir les logements</a>
								<a href="{{ path('building_edit', {'id': building.id}) }}" class="btn btn-primary text-center">Modifier</a>
                                {{ include('building/_delete_form.html.twig') }}
                            </td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5">Pas encore d'immeubles</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<div class="text-center">
				<a href="{{ path('building_new') }}" class="btn btn-success">Cr√©er un nouvel immeuble</a>
			</div>
		</div>
	</div>
{% endblock %}
